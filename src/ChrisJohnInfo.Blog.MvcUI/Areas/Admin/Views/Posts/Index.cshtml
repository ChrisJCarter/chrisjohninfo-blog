@model IEnumerable<ChrisJohnInfo.Blog.Contracts.Models.Post>

<h1>Posts</h1>
<table class="table table-striped">
    <thead>
    <tr>
        <th>Title</th>
        <th>Date Published</th>
        <th><a asp-action="Create" class="btn btn-primary">Create</a></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var post in Model)
    {
        <tr>
            <td>@post.Title</td>
            <td>@($"{post.DatePublished:d}")</td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@post.PostId">Edit</a>
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@post.PostId">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>