@model ChrisJohnInfo.Blog.Contracts.Models.Author

<h1>@(Model.AuthorId == 0 ? "Create" : "Edit") Author</h1>
<div class="row">
    <div class="col-6">
        @using (Html.BeginForm())
        {
            <input type="hidden" asp-for="@Model.AuthorId" />
            <div class="form-group">
                <label asp-for="@Model.FirstName">First Name</label>
                <input asp-for="@Model.FirstName" class="form-control focus-me"/>
            </div>

            <div class="form-group">
                <label asp-for="@Model.LastName">Last Name</label>
                <input asp-for="@Model.LastName" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="@Model.NickName">Nick Name</label>
                <input asp-for="@Model.NickName" class="form-control" />
            </div>

            <div class="form-group">
                <a class="btn btn-light" asp-page="/Authors/Index">Cancel</a>
                <button class="btn btn-primary">@(Model.AuthorId == 0 ? "Create" : "Update")</button>
            </div>
        }
    </div>
</div>